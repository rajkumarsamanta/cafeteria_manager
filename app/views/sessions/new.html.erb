<section class="SessionNew-section">
  <p class="SessionNew-title">
    Welcome to the Cafe Raj's Sign-in page
  </p>
</section>
<section class="SessionNewForm-section">
  <%= form_with url: sessions_path do |form| %>
    <div class="SessionNewForm-div">
      <p class="SessionNewForm-paragraph">
        Email
      </p>
      <%= form.email_field :email, class: "SessionNewForm-div", autofocus: true %>
    </div>
    <div class="SessionNewForm-div">
      <p class="SessionNewForm-paragraph">
        Password
      </p>
      <%= form.password_field :password, class: "SessionNewForm-div" %>
    </div>
    <div class="SessionNewForm-div">
      <%= form.submit "Sign-in", class: "SessionNew-submitButton" %>
    </div>
  <% end %>
</section>
<p class="SessionNewUser-signup">
  If you are a new user, <%= link_to "sign up here", new_user_path %>
</p>
